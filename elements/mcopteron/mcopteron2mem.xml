<?xml version="1.0"?>

<!-- general sim configuration -->
<!-- overridden by the command line -->
<config>
</config>

<!-- reference definition for cpu component -->
<cpu_params>
    <clock>1GHz</clock>
    <mccpu_configfile>cpuconfig.ini</mccpu_configfile>
    <mccpu_appfile>appconfig.ini</mccpu_appfile>
    <mccpu_instfile>opteron-insn.txt</mccpu_instfile>
    <mccpu_distfile>hpccg-usedist.all</mccpu_distfile>
    <mccpu_outputfile>mc_output</mccpu_outputfile>
    <mccpu_debugfile>mc_debug</mccpu_debugfile>
</cpu_params>

<!-- reference definition for cpu component link -->
<cpu_link_params>
    <lat>1ns</lat>
    <name>MEM</name>
</cpu_link_params>

<!-- reference definition -->
<cpu_clock> 1GHz </cpu_clock>

<sst>
	<component id="cpu1" weight=1.0 >	
		<mcopteron>
            <params>
                <cpuId>0xdeadbeef</cpuId>
                <params reference=cpu_params />
            </params> 
			<links>
				<link id="cpu1memory">
                    <params reference=cpu_link_params/>
				</link>
			</links>
		</mcopteron>
	</component>

	<component id="cpu1.memory">	
		<memory>
            <params>
                <clock>2Ghz</clock>
            </params>
			<links>
				<link id="cpu1memory">
					<params>
                        <lat>1ns</lat>
                        <name>port</name>
                    </params>
				</link>
			</links>
		</memory>
	</component>

</sst>

