<!--
    Connect two components so they can send each other events.
    Make sure you set --stopAtCycle on the command line high enough!!
    Each ping-pong will take 2 ns (if run on 2 nodes). You need to
    multiply this by the number of events (max_events) and by
    another 1000 to get the number of cycles.

    E.g. --stopAtCycle 8000 for max_events="4" and lat="1"
    or   --stopAtCycle 200000000 for max_events="100000" and lat="1"
-->

<?xml version="1.0"?>

<sst>
    <component id="component1" weight=10.0 >
	<event_ping_pong>
	    <!-- Make sure you set the same parameters for both components. -->
	    <params max_events="100000" calibration_loop="2" />
	    <links>
		<link id="connect">
		    <params lat="1" name="my_link" />
		</link>
	    </links>
	</event_ping_pong>
    </component>

    <!-- This one bounces the events back -->
    <component id="component2" weight=10.0 >
	<event_ping_pong>
	    <!-- Make sure you set the same parameters for both components. -->
	    <params max_events="100000" calibration_loop="2" />
	    <links>
		<link id="connect">
		    <params lat="1" name="my_link" />
		</link>
	    </links>
	</event_ping_pong>
    </component>

</sst>
